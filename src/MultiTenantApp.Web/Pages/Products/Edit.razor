@page "/products/edit/{Id:guid}"
@using MultiTenantApp.Web.Models.DTOs
@using MultiTenantApp.Web.Services
@using MultiTenantApp.Web.Components.Products
@using MultiTenantApp.Web.Components
@using ProductsRes = MultiTenantApp.Web.Resources.Pages.Products
@inject IProductService ProductService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<div class="d-flex justify-space-between align-center mb-4">
    <MudText Typo="Typo.h4">@ProductsRes.EditProduct</MudText>
    <MudIconButton Icon="@Icons.Material.Filled.History" Color="Color.Info" OnClick="ShowHistory" Title="View History" />
</div>

<MudPaper Class="pa-4">
    @if (model == null)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else
    {
        <ProductForm Model="model" ButtonText="@ProductsRes.Update" OnValidSubmit="Update" />
    }
</MudPaper>

@code {
    [Parameter] public Guid Id { get; set; }

    private CreateProductDto model;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var product = await ProductService.GetByIdAsync(Id);
            model = new CreateProductDto
            {
                Name = product.Name,
                Description = product.Description,
                Price = product.Price
            };
        }
        catch (Exception)
        {
            Snackbar.Add(ProductsRes.LoadError, Severity.Error);
            Navigation.NavigateTo("/products");
        }
    }

    private async Task Update()
    {
        try
        {
            var updateDto = new UpdateProductDto
            {
                Name = model.Name,
                Description = model.Description,
                Price = model.Price
            };

            await ProductService.UpdateAsync(Id, updateDto);
            Snackbar.Add(ProductsRes.ProductUpdatedSuccess, Severity.Success);
            Navigation.NavigateTo("/products");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private void ShowHistory()
    {
        var parameters = new DialogParameters
        {
            { "EntityType", "Product" },
            { "EntityId", Id }
        };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        DialogService.Show<AuditHistory>("Audit History", parameters, options);
    }
}
