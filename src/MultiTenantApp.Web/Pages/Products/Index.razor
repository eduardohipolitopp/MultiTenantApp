@page "/products"
@attribute [Authorize]
@using ProductsRes = MultiTenantApp.Web.Resources.Pages.Products
@inject IProductService ProductService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="mb-4">@ProductsRes.Title</MudText>

<MudButton Variant="Variant.Filled" 
          Color="Color.Success" 
          StartIcon="@Icons.Material.Filled.Add"
          Href="/products/create"
          Class="mb-4">
    @ProductsRes.CreateNewProduct
</MudButton>

<MudDataGrid T="ProductDto" 
             ServerData="LoadServerData" 
             @ref="dataGrid"
             Filterable="true"
             SortMode="SortMode.Single"
             Elevation="2">
    <ToolBarContent>
        <MudText Typo="Typo.h6">@ProductsRes.Title</MudText>
        <MudSpacer />
        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder="@ProductsRes.Search" Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="@ProductsRes.Name" />
        <PropertyColumn Property="x => x.Description" Title="@ProductsRes.Description" />
        <PropertyColumn Property="x => x.Price" Title="@ProductsRes.Price" Format="C2" />
        <TemplateColumn Title="@ProductsRes.Actions" Sortable="false" Filterable="false">
            <CellTemplate>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" 
                              Color="Color.Primary" 
                              Size="Size.Small"
                              Href="@($"/products/edit/{context.Item.Id}")" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                              Color="Color.Error" 
                              Size="Size.Small"
                              OnClick="@(() => DeleteProduct(context.Item.Id))" />
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <PagerContent>
        <MudDataGridPager T="ProductDto" />
    </PagerContent>
</MudDataGrid>

@code {
    private MudDataGrid<ProductDto> dataGrid;
    private string searchString = null;

    private void OnSearch(string text)
    {
        searchString = text;
        dataGrid.ReloadServerData();
    }

    private async Task<GridData<ProductDto>> LoadServerData(GridState<ProductDto> state)
    {
        var request = new PagedRequest
        {
            Page = state.Page + 1,
            PageSize = state.PageSize,
            SortBy = state.SortDefinitions.FirstOrDefault()?.SortBy ?? "Name",
            SortDescending = state.SortDefinitions.FirstOrDefault()?.Descending ?? false,
            SearchTerm = searchString
        };

        var response = await ProductService.GetPagedAsync(request);

        return new GridData<ProductDto>
        {
            Items = response.Items,
            TotalItems = response.TotalCount
        };
    }



    private async Task DeleteProduct(Guid id)
    {
        try
        {
            await ProductService.DeleteAsync(id);
            await dataGrid.ReloadServerData();
            Snackbar.Add(ProductsRes.ProductDeletedSuccess, Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }
}
