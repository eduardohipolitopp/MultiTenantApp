@page "/products/edit/{Id:guid}"
@using MultiTenantApp.Application.DTOs
@using MultiTenantApp.Web.Services
@inject IProductService ProductService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="mb-4">Edit Product</MudText>

<MudPaper Class="pa-4">
    @if (model == null)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else
    {
        <ProductForm Model="model" ButtonText="Update" OnValidSubmit="Update" />
    }
</MudPaper>

@code {
    [Parameter] public Guid Id { get; set; }

    private CreateProductDto model;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var product = await ProductService.GetByIdAsync(Id);
            model = new CreateProductDto
            {
                Name = product.Name,
                Description = product.Description,
                Price = product.Price
            };
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading product: {ex.Message}", Severity.Error);
            Navigation.NavigateTo("/products");
        }
    }

    private async Task Update()
    {
        try
        {
            var updateDto = new UpdateProductDto
            {
                Name = model.Name,
                Description = model.Description,
                Price = model.Price
            };

            await ProductService.UpdateAsync(Id, updateDto);
            Snackbar.Add("Product updated successfully", Severity.Success);
            Navigation.NavigateTo("/products");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }
}
