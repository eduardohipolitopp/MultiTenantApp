@page "/rules"
@using MultiTenantApp.Web.Services
@using MultiTenantApp.Web
@using MultiTenantApp.Web.Resources.Pages
@using MultiTenantApp.Web.Resources
@using RulesRes = MultiTenantApp.Web.Resources.Pages.Rules

@inject IRuleService RuleService
@inject ISnackbar Snackbar
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]

<MudText Typo="Typo.h4" Class="mb-4">@RulesRes.RulesManagementTitle</MudText>

<MudPaper Elevation="2" Class="pa-4 mb-4">
    <MudGrid>
        <MudItem xs="12" sm="8">
            <MudTextField @bind-Value="newRuleName"
                          Label="@RulesRes.NewRuleNamePlaceholder"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense" />
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       OnClick="CreateRule"
                       StartIcon="@Icons.Material.Filled.Add">
                @RulesRes.AddRuleButton
            </MudButton>
        </MudItem>
    </MudGrid>
</MudPaper>

<MudDataGrid T="RuleDto"
             ServerData="LoadServerData"
             @ref="dataGrid"
             Filterable="false"
             SortMode="SortMode.Single"
             Elevation="2">
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="@SharedResource.Name" />
        <TemplateColumn Title="@SharedResource.Actions" Sortable="false" Filterable="false">
            <CellTemplate>
                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteRule(context.Item.Id))" />
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>

@code {
    private MudDataGrid<RuleDto> dataGrid;
    private string newRuleName;

    private async Task<GridData<RuleDto>> LoadServerData(GridState<RuleDto> state)
    {

        var response = await RuleService.GetRules();

        return new GridData<RuleDto>
            {
                Items = response
            };
    }

    private async Task CreateRule()
    {
        if (string.IsNullOrWhiteSpace(newRuleName))
        {
            Snackbar.Add("Rule name is required", Severity.Warning);
            return;
        }

        try
        {
            await RuleService.CreateRule(newRuleName);
            newRuleName = string.Empty;
            await dataGrid.ReloadServerData();
            Snackbar.Add("Rule created successfully", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteRule(string id)
    {
        try
        {
            await RuleService.DeleteRule(id);
            await dataGrid.ReloadServerData();
            Snackbar.Add("Rule deleted successfully", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }
}
