@page "/rules"
@using Microsoft.Extensions.Localization
@using MultiTenantApp.Web.Services
@using MultiTenantApp.Web
@inject IRuleService RuleService
@inject IStringLocalizer<Rules> Localizer
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject ISnackbar Snackbar
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]

<MudText Typo="Typo.h4" Class="mb-4">@Localizer["RulesManagementTitle"]</MudText>

<MudPaper Elevation="2" Class="pa-4 mb-4">
    <MudGrid>
        <MudItem xs="12" sm="8">
            <MudTextField @bind-Value="newRuleName" 
                         Label="@Localizer["NewRuleNamePlaceholder"]" 
                         Variant="Variant.Outlined"
                         Margin="Margin.Dense" />
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudButton Variant="Variant.Filled" 
                      Color="Color.Primary" 
                      FullWidth="true"
                      OnClick="CreateRule"
                      StartIcon="@Icons.Material.Filled.Add">
                @Localizer["AddRuleButton"]
            </MudButton>
        </MudItem>
    </MudGrid>
</MudPaper>

<MudDataGrid T="RuleDto" 
             ServerData="LoadServerData" 
             @ref="dataGrid"
             Filterable="true"
             SortMode="SortMode.Single"
             Elevation="2">
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="@SharedLocalizer["Name"]" />
        <TemplateColumn Title="@SharedLocalizer["Actions"]" Sortable="false" Filterable="false">
            <CellTemplate>
                <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                              Color="Color.Error" 
                              Size="Size.Small"
                              OnClick="@(() => DeleteRule(context.Item.Id))" />
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <PagerContent>
        <MudDataGridPager T="RuleDto" />
    </PagerContent>
</MudDataGrid>

@code {
    private MudDataGrid<RuleDto> dataGrid;
    private string newRuleName;

    private async Task<GridData<RuleDto>> LoadServerData(GridState<RuleDto> state)
    {
        var request = new PagedRequest
        {
            Page = state.Page + 1,
            PageSize = state.PageSize,
            SortBy = state.SortDefinitions.FirstOrDefault()?.SortBy ?? "Name",
            SortDescending = state.SortDefinitions.FirstOrDefault()?.Descending ?? false,
            SearchTerm = state.FilterDefinitions.FirstOrDefault()?.Value?.ToString()
        };

        var response = await RuleService.GetRulesPaged(request);

        return new GridData<RuleDto>
        {
            Items = response.Items,
            TotalItems = response.TotalCount
        };
    }

    private async Task CreateRule()
    {
        if (string.IsNullOrWhiteSpace(newRuleName))
        {
            Snackbar.Add("Rule name is required", Severity.Warning);
            return;
        }

        try
        {
            await RuleService.CreateRule(newRuleName);
            newRuleName = string.Empty;
            await dataGrid.ReloadServerData();
            Snackbar.Add("Rule created successfully", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteRule(string id)
    {
        try
        {
            await RuleService.DeleteRule(id);
            await dataGrid.ReloadServerData();
            Snackbar.Add("Rule deleted successfully", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }
}
