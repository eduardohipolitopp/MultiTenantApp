@page "/forgot-password"
@using MultiTenantApp.Web.Models.DTOs
@using MultiTenantApp.Web.Services
@inject AuthenticatedHttpClient HttpClient
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Elevation="3" Class="pa-6">
        <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">
            Forgot Password
        </MudText>
        <MudText Typo="Typo.body2" Align="Align.Center" Class="mb-4">
            Enter your email address and we'll send you a link to reset your password.
        </MudText>

        @if (!emailSent)
        {
            <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator />
                <MudTextField @bind-Value="model.Email"
                              Label="Email"
                              Variant="Variant.Outlined"
                              InputType="InputType.Email"
                              Required="true"
                              FullWidth="true"
                              Class="mb-4" />

                <MudButton ButtonType="ButtonType.Submit"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           FullWidth="true"
                           Disabled="@isLoading">
                    @if (isLoading)
                    {
                        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                        <MudText Class="ms-2">Sending...</MudText>
                    }
                    else
                    {
                        <MudText>Send Reset Link</MudText>
                    }
                </MudButton>
            </EditForm>

            <MudDivider Class="my-4" />

            <MudButton Variant="Variant.Text"
                       Color="Color.Primary"
                       FullWidth="true"
                       OnClick="@(() => NavigationManager.NavigateTo("/login"))">
                Back to Login
            </MudButton>
        }
        else
        {
            <MudAlert Severity="Severity.Success" Class="mb-4">
                If your email is registered, you will receive a password reset link shortly.
            </MudAlert>
            <MudText Typo="Typo.body2" Align="Align.Center" Class="mb-4">
                Please check your email inbox and spam folder.
            </MudText>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       OnClick="@(() => NavigationManager.NavigateTo("/login"))">
                Go to Login
            </MudButton>
        }
    </MudPaper>
</MudContainer>

@code {
    private ForgotPasswordDto model = new();
    private bool isLoading = false;
    private bool emailSent = false;

    private async Task OnValidSubmit()
    {
        isLoading = true;

        try
        {
            var response = await HttpClient.PostAsJsonAsync("api/Auth/forgot-password", model);
            
            if (response.IsSuccessStatusCode)
            {
                emailSent = true;
                Snackbar.Add("Password reset email sent!", Severity.Success);
            }
            else
            {
                Snackbar.Add("An error occurred. Please try again.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add("An error occurred. Please try again.", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }
}
